<div class="col-md-12">
     <table class="table table-striped table-bordered table-hover dataTables-example">
        <thead>
          <tr>
              <th class="text-center" style="background:#1AB394;color:#f3f3f4 !important;">Property</th>
              <th class="text-center" style="background:#1AB394;color:#f3f3f4 !important;">Definition</th>
          </tr>
        </thead>
        <tbody>
            <% @xml_rg.each do|x|%>
            <% @proref=x.propertyRef %>
             <tr>
              <% if x.Required== 'y' %>
                  <td> <%= link_to x.property , {:controller => :home,:action => :dictionary_detail, :term => '', :esci => x.propertyRef, :def => ''}, :target => "_blank" %> <span class="text-danger" style="font-size: 16px;">  <b>*</b></span></td>
                <%else%>
                <td> <%= link_to x.property , {:controller => :home,:action => :dictionary_detail, :term => '', :esci => Base64.encode64(x.propertyRef), :def => ''}, :target => "_blank" %></td>
              <% end %>
              <td>
              <%# @list_drop =DefinitonDn.where("concept_ID = ? AND language_id=?",@proref,'0161-1#LG-000001#1') %>
                  <%# @list_drop.each do |list_drop|%>
                   <%= x.Property_Definition %>
                  <%# end %>
              </td>
            <% end %>
            </tr>
        </tbody>
      </table>
</div>
